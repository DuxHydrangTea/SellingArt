@model ArtSocial.Models.User
<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Thêm người dùng</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header">Biểu mẫu người dùng</h5>
            <form method="post" asp-action="Create" class="card-body">

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">UserName</label>
                    <input type="text" asp-for="UserName" name="UserName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Password</label>
                    <input type="password" asp-for="Password" name="Password" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">FullName</label>
                    <input type="text" asp-for="FullName" name="FullName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">AvatarPath</label>
                    <input type="text" asp-for="AvatarPath" name="AvatarPath" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Wallet</label>
                    <input type="number" asp-for="Wallet" name="Wallet" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">MoTa</label>
                    <textarea type="text" asp-for="MoTa" name="MoTa" class="form-control"> </textarea>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlSelect1" class="form-label">isAdmin </label>
                    <select asp-for="isAdmin"class="form-select" id="exampleFormControlSelect1" aria-label="Default select example" name="isAdmin">
                        <option value="true"> true </option>
                        <option value="false"> false</option>
                    </select>
                </div>
               
                <button type="submit" class="btn btn-primary">Đăng ký tài khoản</button>
            </form>
        </div>
    </div>
</div>