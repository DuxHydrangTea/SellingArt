@model IList<User>



<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Tables</h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">

            <!-- table section -->
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Danh sách người dùng</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên người dùng</th>
                                        <th>Họ và tên</th>
                                        <th>Số dư</th>
                                        <th>Avatar</th>
                                        
                                        <th>*</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.UserID</td>
                                            <td>@item.UserName</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Wallet</td>
                                            <td> <img src="~/@item.AvatarPath" width="200" />  </td>
                                            <td> <a asp-area="Admin" asp-action="Edit" asp-controller="User" asp-route-id="@item.UserID"> Sửa / </a> <a asp-area="Admin" asp-action="Delete" asp-controller="User" asp-route-id="@item.UserID">Xoá</a> </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer -->
    <div class="container-fluid">
        <div class="footer">
            <p>Copyright © 2018 Designed by html.design. All rights reserved.</p>
        </div>
    </div>
</div>