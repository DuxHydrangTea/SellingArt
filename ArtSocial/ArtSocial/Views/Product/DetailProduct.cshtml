                                    <a href="#">
                                        <i class="bi-play"></i>
                                        Play now
                                    </a>
                                </small>

                                <small>
                                    <i class="bi-clock-fill custom-icon"></i>
                                    50 Minutes
                                </small>

                                <small class="ms-auto">Episode <span class="badge">15</span></small>
                            </div>

                            <h2 class="mb-2">Tác phẩm: @Model?.ArtName</h2>
