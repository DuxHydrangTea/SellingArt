@model IList<DetailProduct>
<header class="site-header d-flex flex-column justify-content-center align-items-center">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">

                <h2 class="mb-0">Danh sách tác phẩm</h2>
            </div>

        </div>
    </div>
</header>


<section class="latest-podcast-section section-padding pb-0" id="section_2">
    <div class="container">
        <div class="col-lg-12 col-12 mx-auto">
            <nav aria-label="Page navigation example">
                <ul class="pagination pagination-lg justify-content-center mt-5">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <li class="page-item "><a class="page-link" href="/list-tac-pham1">Trừu tượng</a></li>

                    <li class="page-item"><a class="page-link" href="/list-tac-pham2">Logo</a></li>

                    <li class="page-item"><a class="page-link" href="/list-tac-pham3">Banner</a></li>

                    <li class="page-item"><a class="page-link" href="/list-tac-pham4">Poster</a></li>

                    <li class="page-item"><a class="page-link" href="/list-tac-pham5">Nữ tính</a></li>

                    <li class="page-item"><a class="page-link" href="/list-tac-pham6">3D</a></li>

                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row justify-content-center">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Danh sác tác phẩm</h4>
                </div>
            </div>
    @if(Model.Count() == 0){
        <h5 style="color:blueviolet"> ----------------      Hiện chưa có tác phẩm nào       -------------------</h5>
    }
       
            @foreach (var item in Model)
            {
                string url = "/tac-pham-" + item.ArtID.ToString();
                <div class="col-lg-6 col-12 mb-4">
                    <div class="custom-block d-flex">
                        <div class="">
                            <div class="custom-block-icon-wrap">
                                <div class="section-overlay"></div>
                                <a href="detail-page.html" class="custom-block-image-wrap">
                                    <img src="@item.Image" alt="" height="112px" width="112px">
                                        @item.Prices

                                </a>
                            </div>

                            <div class="mt-2">
                                <form action="@Url.Action("AddtoCart", "MyCart")" method="get" class="custom-form search-form flex-fill me-3" role="search">
                                    <div class="input-group input-group-lg">
                                        <input type="text" name="ArtID" value="@item?.ArtID" hidden />
                                        <button type="submit" class="form-control" id="submit"> Add to cart </button>
                                    </div>
                                </form>
                                @*<a href="#" class="btn custom-btn">
                                    Add to cart
                                </a>*@
                            </div>
                        </div>

                        <div class="custom-block-info">
                            <div class="custom-block-top d-flex mb-1">
                                <small class="me-4">
                                    <i class="bi-clock-fill custom-icon"></i>
                                    50 Minutes
                                </small>

                                <small>Episode <span class="badge">15</span></small>
                            </div>

                            <h5 class="mb-2">
                                <a href="@url">
                                    @item.ArtName
                                </a>
                            </h5>

                            <div class="profile-block d-flex">
                                <img src="~/@item.AvatarPath" class="profile-block-image img-fluid" alt="">

                                <p>
                                    @item.FullName
                                    <img src="~/Web/images/verified.png" class="verified-image img-fluid" alt="">
                                    <strong>Thành viên</strong>
                                </p>
                            </div>

                            @*<p class="mb-0">@(new HtmlString(item.Description.Remove(48))) ...</p>*@
                            <p class="mb-0">@item.Abstract</p>
                            <div class="custom-block-bottom d-flex justify-content-between mt-3">
                                <a href="#" class="bi-headphones me-1">
                                    <span>120k</span>
                                </a>

                                <a href="#" class="bi-heart me-1">
                                    <span>42.5k</span>
                                </a>

                                <a href="#" class="bi-chat me-1">
                                    <span>11k</span>
                                </a>

                                <a href="#" class="bi-download">
                                    <span>50k</span>
                                </a>
                            </div>
                        </div>

                        <div class="d-flex flex-column ms-auto">
                            <a href="#" class="badge ms-auto">
                                <i class="bi-heart"></i>
                            </a>

                            <a href="#" class="badge ms-auto">
                                <i class="bi-bookmark"></i>
                            </a>
                        </div>
                    </div>
                </div>

            }

        </div>
        
    </div>
</section>
  @await Component.InvokeAsync("RecentArtView")


