@model IList<Product>
<style>
    .img-fluid2 {
        max-width: 10%;
        height: auto;
    }
</style>
<section class="related-podcast-section section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Tác phẩm đã đăng</h4>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-12 col-12 mb-4 mb-lg-0">
                    <div class="custom-block custom-block-full" style="margin:20px">
                        <div class="custom-block-image-wrap">
                            <a href="detail-page.html">
                                <img src="@item.Image" class="img-fluid2" alt="">
                            </a>
                        </div>

                        <div class="custom-block-info">
                            <h5 class="mb-2">
                                <a href="detail-page.html">
                                    @item.ArtName
                                </a>
                            </h5>



                            <p class="mb-0">@item.Abstract</p>


                        </div>
                        <div class="social-share d-flex flex-column ms-auto">
                            <a asp-controller="MyAccount" asp-action="EditMyArt" asp-route-id="@item.ArtID" class="badge ms-auto">
                                <i class="bi-pencil"></i>
                            </a>

                            <a asp-controller="MyAccount" asp-action="DeleteMyProduct" asp-route-id="@item.ArtID" class="badge ms-auto">
                                <i class="bi-trash"></i>
                            </a>
                        </div>

                    </div>
                </div>
            }
            
         



        </div>
    </div>
</section>